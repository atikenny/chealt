{
    "rules": {
        "extends":      "eslint:recommended",
        
        "comma-dangle":             ["error", "never"],
        "eol-last":                 ["error", "always"],
        "indent":                   ["error", 4],
        "no-multiple-empty-lines":  ["error", { "max": 1 }],
        "no-trailing-spaces":       ["error"]
    },
    "parserOptions": {
        "ecmaVersion": 6
    }
}
