{
  "name": "@chealt/ui",
  "version": "0.0.0",
  "description": "Chealt UI",
  "main": "scr/index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --config config/webpack.config.js",
    "start": "yarn watch",
    "test": "jest --config=config/jest/unit.config.js",
    "test:ui": "concurrently --success first --kill-others \"yarn start\" \"yarn test:ui:wait && yarn test:ui:run\"",
    "test:ui:debug": "DEBUG=true yarn test:ui",
    "test:ui:run": "JEST_PUPPETEER_CONFIG=config/jest/ui.puppeteer.config.js jest --config=config/jest/ui.config.js",
    "test:ui:wait": "wait-on -t 60000 http-get://localhost:9000/",
    "watch": "webpack-dev-server --config config/webpack/webpack.config.js"
  },
  "author": "Attila Bartha",
  "license": "ISC",
  "dependencies": {
    "@chealt/component-library": "0.0.0"
  },
  "devDependencies": {
    "css-loader": "^3.1.0",
    "dotenv": "^8.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-puppeteer": "^4.3.0",
    "puppeteer": "^1.19.0",
    "redux-devtools-extension": "^2.13.8",
    "style-loader": "^0.23.1"
  }
}
